# Contributor: Filip Parag <filip@parag.rs>
# Maintainer:
pkgname=hetzner_ddns
pkgver=1.0.0
pkgrel=0
pkgdesc="Hetzner Dynamic DNS Daemon"
arch="noarch"
url="https://github.com/filiparag/hetzner_ddns"
license="BSD"
depends="curl jq net-tools"
depends_doc="man-db"
depends_openrc="openrc"
makedepends="make"
install=""
subpackages="${pkgname}-doc ${pkgname}-openrc"
giturl="$url"
source="${pkgname}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"
options="!check"

prepare() {
	find "${builddir}" -maxdepth 1 -type f \
		-exec sed -i 's:/usr/local/etc:/etc:g' {} \; \
		-exec sed -i 's:/usr/local:/usr:g' {} \;
}

check() {
	default_check
}

openrc() {
	default_openrc
}

doc() {
	default_doc
}

package() {
	cd "${builddir}"
	make prefix="${pkgdir}" install openrc
}

sha256sums="477e55d2fb15b5e6f80623bba74ee8940d64b95d4a29ec310071dd7c0e00db72  $pkgname-$pkgver.tar.gz"
