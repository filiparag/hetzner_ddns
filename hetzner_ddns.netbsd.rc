# PROVIDE: hetzner_ddns
# REQUIRE: LOGIN

$_rc_subr_loaded . /etc/rc.subr

export PATH="$PATH:/usr/local/bin"

name="hetzner_ddns"
rcvar=$name
command="/usr/local/bin/${name}"
command_args="-V -c /usr/local/etc/${name}.json"
required_files="/usr/local/etc/${name}.json"
pidfile="/var/run/${name}.pid"
procname="/bin/sh"

run_rc_command "$1"
